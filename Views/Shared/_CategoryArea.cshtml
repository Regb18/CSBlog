@model CategoryDetailsViewModel

@using CSBlog.Models.ViewModels;
@using CSBlog.Services.Interfaces
@using CSBlog.Enums;

@inject IImageService _ImageService

<!-- Start Category Area  -->
<div class="axil-author-area axil-author-banner bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-author">
                    <div class="media">
                        <div class="thumbnail me-3">
                            <a href="#">
                                <img class="cat-image" src="@_ImageService.ConvertByteArrayToFile(Model.Category!.ImageData!, Model.Category!.ImageType!,(int)DefaultImage.CategoryImage)" alt="Category Image">
                            </a>
                        </div>
                        <div class="media-body">
                            <div class="author-info">
                                <h1 class="title"><a href="#">@Model.Category.Name</a></h1>
                                <span class="b3 subtitle">@Model.Category.Description</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>